
to ul-power
	init-onboardleds
	redon
	wait 10
	redoff	
end

to ul-init
	yellowon	
	wait 10
	yellowoff
end

to ul-go
	greenon
	wait 10 
	greenoff
	wait 10
	loop 
	[
		collect-data
		wait 100
	]
end

to collect-data
	init-packet 10
	repeat 6 [ read-sensors ] 
	add-checksum
	blueon
	greenon
	wait 5
	blueoff 	
	greenoff	
end

to read-sensors
	packet-word read-IR-sensor
	packet-word read-Optical-sensor
	blueon 
	wait 1
	blueoff
	wait 10
end

to read-IR-sensor
	output readADC 0
end

to read-Optical-sensor
	output readADC 1
end




